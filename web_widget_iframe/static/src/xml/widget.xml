<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="FieldIFrame">
        <div class="oe_iframe">
            <div class="oe_iframe_switch_positioner">
                <span class="fa fa-expand oe_iframe_switch"></span>
            </div>
            <div class="oe_iframe_content">
                <iframe t-att-class="''+widget.widget_class"
                    t-att-style="widget.node.attrs.style" width='100%'
                    height='100%' frameborder="1"
                    webkitallowfullscreen='1' mozallowfullscreen='1'
                    allowfullscreen='1' />
            </div>
        </div>
    </t>
    <tr t-extend="ListView.row">
        <t t-jquery="t td t" t-operation="replace">
            <t t-if="column.widget =='iframe' || column.type == 'iframe'"></t>
            <t t-raw="render_cell(record, column)" />
        </t>
    </tr>
</templates>
